{
  "name": "vscarbon",
  "displayName": "VSCarbon",
  "description": "Encourages low-carbon coding habits with live electricity grid data",
  "version": "0.1.0",
  "publisher": "vscarbon-team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liti-dev/vscarbon"
  },
  "keywords": [
    "carbon",
    "sustainability",
    "environment",
    "energy",
    "green-coding",
    "electricity-grid"
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#4CAF50",
    "theme": "light"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscarbon.showCarbon",
        "title": "VSCarbon: Show Carbon"
      },
      {
        "command": "vscarbon.setPostcode",
        "title": "VSCarbon: Set Postcode"
      },
      {
        "command": "vscarbon.testCommitTracking",
        "title": "VSCarbon: Test Commit Tracking"
      },
      {
        "command": "vscarbon.resetCommitStats",
        "title": "VSCarbon: Reset Commit Stats"
      }
    ],
    "configuration": {
      "title": "VSCarbon",
      "properties": {
        "vscarbon.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start monitoring carbon intensity when VS Code opens"
        },
        "vscarbon.updateInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 120,
          "description": "Update interval in minutes for carbon intensity data"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
